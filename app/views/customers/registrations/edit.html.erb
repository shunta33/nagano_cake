<h3>会員情報編集</h3>
<div class="container">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

      <div class="field row mt-5">
        <div class="col-lg-2">
          <%= f.label :first_name, "名前" %>
        </div>
        <div class="col-lg-1">
          <%= f.label :first_name, "（姓）" %>
        </div>
        <div class="col-lg-2">
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        </div>
        <div class="col-lg-1">
          <%= f.label :last_name, "（名）" %>
        </div>
        <div class="col-lg-2">
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        </div>
      </div>
      <div class="field row mt-1">
        <div class="col-lg-2">
          <%= f.label :first_name_kana, "フリガナ" %>
        </div>
        <div class="col-lg-1">
          <%= f.label :first_name_kana, "（セイ）" %>
        </div>
        <div class="col-lg-2">
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
        </div>
        <div class="col-lg-1">
          <%= f.label :last_name_kana, "（メイ）" %>
        </div>
        <div class="col-lg-2">
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
        </div>
      </div>
      <div class="field row mt-1">
        <div class="col-lg-3">
          <%= f.label :email, "メールアドレス" %>
        </div>
        <div class="col-lg-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>
      <div class="field row mt-1">
        <div class="col-lg-3">
          <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
        </div>
        <div class="col-lg-3">
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </div>
      </div>
      <div class="field row mt-1">
        <div class="col-lg-3">
          <%= f.label :address, "住所" %>
        </div>
        <div class="col-lg-3">
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>
      </div>
      <div class="field row mt-1">
        <div class="col-lg-3">
          <%= f.label :telephone_number, "電話番号（ハイフンなし）" %>
        </div>
        <div class="col-lg-3">
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
        </div>
      </div>




  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>


<div class="row">
  <div class="col-lg-2 offset-lg-3">
    <div class="actions">
      <%= f.submit "編集内容を保存" %>
    </div>
  <% end %>
  </div>
  <div class="col-lg-2- offset-3">
    <%= link_to "退会する", customers_unsubscribe_path %>
  </div>
</div>
