<h1>商品一覧(全x件)</h1>
  <table class="table">
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
      <td>〒<%= order.shipping_postal_code %><br><%= order.shipping_address %><br><%= order.shipping_name %></td>
      <% @sum = 0 %>
    <td><% order.order_items.each do |order_item| %>
      <%= order_item.item.name %><br>
      <% end %>
      </td>
      <% order.order_items.each do |order_item| %>
      <% @sum += order_item.item.price*order_item.quantity %>
      <% end %>
      <td><%= @sum %></td>
      <td></td>

    </tr>
    <% end %>
  </tbody>
  </table>