<table>
  <% @sum = 0 %>
  <% @cart_items.each do |cart_item| %>
    <tr>
      <td>商品名</td>
      <td>単価（税込）</td>
      <td>数量</td>
      <td>小計</td>
  　</tr>
  　<tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.item.price*cart_item.amount %></td>
    </tr>
    <% @sum += cart_item.item.price*cart_item.amount %>
  <% end %>
</table>

<table>
  <tr>
    <td>送料</td>
    <td><%= @order.shipping_fee %></td>
  </tr>
  <tr>
    <td>商品合計</td>
    <td><%= @sum %></td>
  </tr>
  <tr>
    <td>請求金額</td>
    <td><%= @sum + @order.shipping_fee %></td>
  </tr>
</table>

<p>支払方法</p>
<%= @order.payment_method %>
<p>お届け先</p>
〒<%= @order.shipping_postal_code %>
<%= @order.shipping_address %>
<%= @order.shipping_name %>

<%= form_with url: "/orders", model: @order, local: true do |f| %>
<%= f.hidden_field :customer_id, :value => @customer.id %>
<%= f.hidden_field :billing_amount, :value => @sum + @order.shipping_fee %>
<%= f.hidden_field :shipping_address, :value => @order.shipping_address %>
<%= f.hidden_field :shipping_postal_code, :value => @order.shipping_postal_code %>
<%= f.hidden_field :shipping_name, :value => @order.shipping_name %>
<%= f.hidden_field :shipping_fee, :value => @order.shipping_fee %>
<%= f.hidden_field :payment_method, :value => @order.payment_method %>
<%= f.submit "確認画面へ進む" %>
<% end %>