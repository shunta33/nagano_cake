<div class="container">
  <div class="row mt-3">
    <div class="col-lg-3 offset-1">
    <h3>商品一覧</h3>
    </div>
    <div class="col-lg-2 offset-5 pt-2">
      <%= link_to "商品新規登録", new_admin_item_path %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-lg-10 offset-1">

        <table class="table table-bordered">
          <thead>
            <tr>
              <th class="table-secondary">商品ID</th>
              <th class="table-secondary">商品名</th>
              <th class="table-secondary">税抜価格</th>
            </tr>
          </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
          </tr>
          <% end %>
        </tbody>
        </table>
    </div>
  </div>



</div>