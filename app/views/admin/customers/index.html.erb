<div class="container">
  <div class="row mt-3">
    <div class="col-lg-3 offset-1">
      <h3>会員一覧</h3>
    </div>
  </div>
</div>
  <div class="row mt-3">
    <div class="col-lg-8 offset-2">
        <table class="table">
          <thead>
            <tr>
              <th class="table-secondary">会員ID</th>
              <th class="table-secondary">氏名</th>
              <th class="table-secondary">メールアドレス</th>
              <th class="table-secondary">ステータス</th>
            </tr>
          </thead>
          <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.first_name+customer.last_name, admin_customer_path(customer.id) %></td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_deleted == false %>
              <%= "有効" %>
              <% else %>
              <%= "退会" %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
        </table>
    </div>
  </div>