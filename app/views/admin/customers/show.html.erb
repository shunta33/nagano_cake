<div class="container">
  <div class="row mt-3">
    <div class="col-lg-6 offset-1">
      <h3><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</h3>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-lg-10 offset-1">
      <div class="row">
        <div class="col-lg-2">
          会員ID
        </div>
        <div class="col-lg-9">
          <%= @customer.id %>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-lg-2">
          氏名
        </div>
        <div class="col-lg-9">
          <%= @customer.first_name %>　<%= @customer.last_name %>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-lg-2">
          フリガナ
        </div>
        <div class="col-lg-9">
          <%= @customer.first_name_kana %>　<%= @customer.last_name_kana %>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-lg-2">
          郵便番号
        </div>
        <div class="col-lg-9">
          <%= @customer.postal_code %>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-lg-2">
          住所
        </div>
        <div class="col-lg-9">
          <%= @customer.address %>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-lg-2">
          電話番号
        </div>
        <div class="col-lg-9">
          <%= @customer.telephone_number %>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-lg-2">
          メールアドレス
        </div>
        <div class="col-lg-9">
          <%= @customer.email %>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-lg-2">
          会員ステータス
        </div>
        <div class="col-lg-9">
          <% unless @customer.is_deleted %>
            <div class="text-success">有効</div>
          <% else %>
            <div class="text-black-50">無効</div>
          <% end %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-lg-2 offset-2">
          <%= link_to "編集する", edit_admin_customer_path, :class=>"btn btn-success" %>
        </div>
        <div class="col-lg-5">
          <%= link_to "注文履歴一覧を見る", admin_orders_path(customer_id: @customer.id), :class=>"btn btn-primary" %>
        </div>
      </div>
  </div>

  </div>
</div>

