<%= form_with url: "/admin/customers", model: @customers, local: true do |f| %>
<table>
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= f.text_field :first_name %><%= f.text_field :last_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= f.text_field :first_name_kana %><%= f.text_field :last_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td><%= f.select :is_deleted, ['turu', 'false'] %></td>
    </tr>
</table>
<%= f.submit "変更を保存" %>
<% end %>