<div class="container">
  <div class="row">
    <div class="col-lg-6 offset-1">
      <h3><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h3>
    </div>
  </div>
  <%= form_with url: admin_customer_path, model:@customer, local: true do |f| %>
  <div class="row mt-3">
    <div class="col-lg-2 offset-1">
      会員ID
    </div>
    <div class="col-lg-4">
      <%= @customer.id %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-lg-2 offset-1">
      氏名
    </div>
    <div class="col-lg-3">
      <%= f.text_field :first_name %>
    </div>
    <div class="col-lg-3">
      <%= f.text_field :last_name %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-lg-2 offset-1">
      フリガナ
    </div>
    <div class="col-lg-3">
      <%= f.text_field :first_name_kana %>
    </div>
    <div class="col-lg-3">
      <%= f.text_field :last_name_kana %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-lg-2 offset-1">
      郵便番号
    </div>
    <div class="col-lg-4">
      <%= f.text_field :postal_code %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-lg-2 offset-1">
      住所
    </div>
    <div class="col-lg-4">
      <%= f.text_field :address %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-lg-2 offset-1">
      電話番号
    </div>
    <div class="col-lg-4">
      <%= f.text_field :telephone_number %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-lg-2 offset-1">
      メールアドレス
    </div>
    <div class="col-lg-4">
      <%= f.text_field :email %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-lg-2 offset-1">
      会員ステータス
    </div>
    <div class="col-lg-1">
      <%= f.radio_button :is_deleted, 'false', {:checked => true} %>
      有効
    </div>
    <div class="col-lg-2">
      <%= f.radio_button :is_deleted, 'true' %>
      無効
    </div>
  </div>
  <div class="row">
    <div class="col-lg-3 offset-3 mt-4">
      <%= f.submit "変更を保存" %>
    </div>
  </div>

      <% end %>

</div>

