<h1>ショッピングカート</h1>
<%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete %>

<table>
    <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
    </tr>
    <% @sum = 0 %>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.price %></td>
      <td>
        <%= form_with model: cart_item, method: :patch, local:true do |f| %>
        <%= f.number_field :amount %>
        <%= f.submit '変更' %>
        <% end %>

      </td>
      <td><%= cart_item.item.price*cart_item.amount %></td>
      <td><%= cart_item.item.name %></td>
      <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete %></td>
      </tr>
      <% @sum += cart_item.item.price*cart_item.amount %>
      <% end %>
 </table>

      <table>
        <tr>
          <td>合計金額<%= @sum %></td>
          <td></td>
        </tr>
      </table>
<%= link_to "情報入力に進む", orders_new_path %>
