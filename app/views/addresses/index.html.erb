<h1>配送先登録/一覧</h1>

<%= form_with model: @address, local: true do |f| %>
  <p>郵便番号（ハイフンなし）</p><%= f.text_field :postal_code %>
  <p>住所</p><%= f.text_field :shipping_address %>
  <p>宛名</p><%= f.text_field :name %>
　<%= f.submit "新規登録" %>
<% end %>

<table>
   <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.shipping_address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_address_path(address.id) %><%= link_to "削除する", address_path(address.id), method: :delete %></td>
    </tr>
    <% end %>
</table>