<div class="container">
  <div class="row mt-3">
    <div class="col-lg-1"></div>
    <h1 class="col-lg-2 pr-0 pl-3">商品一覧</h1>
    <div class="col-lg-2 pl-0 pt-3">
      （全<%= @items_count %>件）
    </div>
  </div>
<div class="row">
  <div class="col-lg-1"></div>
  <div class="col-lg-10">
    <% @items.each_with_index do |item,i| %>
    <div class="item_box d-lg-inline-block">
      <div class="item_image">
        <%= attachment_image_tag item, :image, size: "220x220" %>
      </div>
      <div class="item_info">
        <%= link_to item.name, item_path(item.id) %>
        <div>￥<%= item.price.to_s(:delimited) %></div>
      </div>
    </div>
    <% end %>
  </div>

</div>
<%= paginate @items %>

</div>